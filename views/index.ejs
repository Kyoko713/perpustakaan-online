<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Perpustakaan Online</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5">
    <h1 class="mb-4 text-center">📚 Daftar Buku Perpustakaan</h1>

    <a href="/tambah" class="btn btn-success mb-4">➕ Tambah Buku</a>

    <% if (books.length === 0) { %>
      <div class="alert alert-warning text-center">Belum ada buku yang tersedia.</div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% books.forEach(function(book) { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= book.title %></h5>
                <p class="card-text">Penulis: <strong><%= book.author %></strong></p>
                <p class="card-text">Tahun: <%= book.year %></p>
                <p class="card-text">
                  Status: 
                  <% if (book.available) { %>
                    <span class="badge bg-success">Tersedia</span>
                  <% } else { %>
                    <span class="badge bg-danger">Dipinjam</span>
                  <% } %>
                </p>
              </div>
              <div class="card-footer text-center">
                <% if (book.available) { %>
                  <form action="/pinjam/<%= book._id %>" method="POST" class="d-inline">
                    <button class="btn btn-primary btn-sm">Pinjam</button>
                  </form>
                <% } else { %>
                  <form action="/kembali/<%= book._id %>" method="POST" class="d-inline">
                    <button class="btn btn-warning btn-sm">Kembalikan</button>
                  </form>
                <% } %>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</body>
</html>
