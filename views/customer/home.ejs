<!DOCTYPE html>
<html>
<head>
  <title>Perpustakaan - Pengunjung</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="mb-4">Daftar Buku Tersedia</h2>
    <div class="row">
      <% books.forEach(book => { %>
        <div class="col-md-4 mb-3">
          <div class="card h-100">
            <img src="<%= book.imageUrl %>" class="card-img-top" style="height: 250px; object-fit: cover;">
            <div class="card-body">
              <h5><%= book.title %></h5>
              <p><strong>Penulis:</strong> <%= book.author %></p>
              <a href="/buku/<%= book._id %>" class="btn btn-primary btn-sm">Lihat Detail</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
